    <style name="ActionEditTextStyle">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">top|center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/notification_module_padding_medium</item>
        <item name="android:layout_marginRight">@dimen/notification_module_padding_medium</item>
        <item name="android:minWidth">@dimen/extra_circle_radius</item>
        <item name="android:minHeight">@dimen/extra_circle_radius</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="StandardTextView3rdLevelStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_grey_500</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="StandardTextViewSubTitleStyle">
